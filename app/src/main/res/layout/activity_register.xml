<?xml version="1.0" encog="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="用户名："
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_reg_user"
                style="@style/ET_Register"
                android:layout_marginRight="50dp"
                android:hint="请输入用户名" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="手机号："
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_reg_tel"
                style="@style/ET_Register"
                android:layout_marginRight="50dp"
                android:hint="请输入手机号"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="验证码："
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_reg_verCode"
                style="@style/ET_Register"
                android:layout_width="180dp"
                android:hint="6位验证码"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_reg_vcode"
                style="@style/ButtonWhiteRound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:text="获取验证码"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="设置密码："
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_reg_set_password"
                style="@style/ET_Register"
                android:layout_marginRight="50dp"
                android:hint="请设置您的密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="确认密码："
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_reg_confirm_password"
                style="@style/ET_Register"
                android:layout_marginRight="50dp"
                android:hint="请再次确认您的密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_reg_confirm"
            style="@style/ButtonGreenRound"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="完成" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>