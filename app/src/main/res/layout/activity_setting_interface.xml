<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Setting.Setting_Interface">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting_interface"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_setting_interface">

        <!--别用中文ID！！！！！！-->
        <TextView
            android:id="@+id/theme_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_checked"
            android:padding="15dp"
            android:text="默认主题"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <!--别用中文ID！！！！！！-->
        <TextView
            android:id="@+id/theme_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="白色简约"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <!--别用中文ID！！！！！！-->
        <TextView
            android:id="@+id/theme_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="黑色简约"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>