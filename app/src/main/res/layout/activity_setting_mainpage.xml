<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".Activities.Setting.Setting_Mainpage">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting_mainpage"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_setting_mainpage">

        <TextView
            android:id="@+id/tv_setting_main_safety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="15dp"
            android:text="账户安全"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/tv_setting_main_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="15dp"
            android:text="通用"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/tv_setting_main_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="15dp"
            android:text="一键求救服务"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/tv_setting_main_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="15dp"
            android:text="意见反馈"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/tv_setting_main_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="15dp"
            android:text="关于"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:id="@+id/tv_setting_main_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="15dp"
        android:text="退出登录"
        android:textColor="@color/colorRed"
        android:textSize="28sp" />
</androidx.constraintlayout.widget.ConstraintLayout>