    tools:context=".Activities.Task.TaskStatistics">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_task_statistics"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f5f5f5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_task_statistics">

        <TextView
            android:id="@+id/tv_task_statistics_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_flag_24px"
            android:text="排行榜"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_task_statistics_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:text="已发布任务统计" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_task_statistics_receive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:text="已接受任务统计" />
    </LinearLayout>

