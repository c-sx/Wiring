<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_task_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Home.HomepageTask">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_task_module"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_task_module">

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <LinearLayout
                android:id="@+id/btn_task_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:paddingLeft="20dp"
                    android:text="我的任务"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <LinearLayout
                android:id="@+id/btn_task_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:paddingLeft="20dp"
                    android:text="领取任务"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <LinearLayout
                android:id="@+id/btn_task_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:paddingLeft="20dp"
                    android:text="发布任务"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <LinearLayout
                android:id="@+id/btn_task_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                    android:text="任务统计"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />


            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/homepage_task_statistic_1"
                />

            <View
                style="@style/Divider"
                android:layout_height="10dp"
                android:background="@color/divider_b" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/homepage_task_statistic_2"/>
        </LinearLayout>

    </ScrollView>


