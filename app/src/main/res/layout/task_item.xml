<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/drawer_gift_layout"
    >

    <LinearLayout
        android:id="@+id/task_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="20dp"
            android:text="待领取"
            android:textColor="@color/colorAccent"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/ll_task_center_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <ImageView
                android:id="@+id/iv_frag_whole"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_green"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_task_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="【标题】" />

                <TextView
                    android:id="@+id/tv_task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本这是文本" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬赏积分：￥"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_task_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.00"
                    android:textSize="15dp" />

            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal">-->

                <!--<Button-->
                    <!--android:id="@+id/btn_task_center_left"-->
                    <!--style="@style/ButtonWhiteRound"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:text="放弃任务"-->
                    <!--android:textSize="15dp" />-->

                <!--<Button-->
                    <!--android:id="@+id/btn_task"-->
                    <!--style="@style/ButtonGreenRound"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="确认完成"-->
                    <!--android:textSize="15dp" />-->
            <!--</LinearLayout>-->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


